<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020824"
    tools:context=".PostDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/backButtonDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white"
                android:contentDescription="Voltar" />

            <ImageButton
                android:id="@+id/btnDeletePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Excluir Postagem"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvDetailCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="#Categoria"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Título Completo da Postagem do Fórum"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvDetailAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Por: Nome do Autor"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvDetailDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="• 2 horas atrás"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Aqui vai o corpo completo do texto da postagem, que pode ser bastante longo e detalhado..."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="40dp" />

            <TextView
                android:id="@+id/tvCommentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Respostas (0)"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_comment" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/commentInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#020824"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        app:elevation="8dp">

        <EditText
            android:id="@+id/etCommentInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escreva sua resposta..."
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:padding="10dp"
            android:minHeight="48dp"
            android:inputType="textMultiLine"
            android:maxLines="5"/>

        <ImageButton
            android:id="@+id/btnSendComment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            app:tint="#2196F3"
            android:contentDescription="Enviar Comentário" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>